{
  "settings": {
    "plugins": [
      "eslint-plugin-tsdoc",
      "@typescript-eslint/eslint-plugin",
      "prettier"
    ],
    "extends": ["plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "import/resolver": {
      "alias": {
        "map": [["~", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "env": {
      "es6": true
    }
  }
}
